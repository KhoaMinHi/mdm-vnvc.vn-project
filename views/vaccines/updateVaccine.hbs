<div class="container">
    {{#notice}}
    {{!-- <div class="alert alert-warning" role="alert">
        {{this}}
    </div> --}}
    <!-- Modal -->
    <div class="modal fade" id="warningRelPersonModal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-center">
                <div class="modal-header d-flex justify-content-center text-warning">
                    <h5 class="modal-title" id="exampleModalLongTitle">Thông Báo</h5>
                </div>
                <div class="modal-body">
                    {{this}}
                </div>
                <div class="modal-footer">
                    <button id="hideNoticeRelPerson" type="button" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    {{/notice}}

    <form action="/vaccine/{{vaccine._id}}" method="POST">
        <div class="alignAddPlayerForm">

            <div style="color:rgb(82, 165, 237); font-size: 20px; font-weight: bold;">
                Mã vác xin: {{vaccine._id}}
            </div>
            <div>
                <label>Tên vác xin:</label>
                <input type="text" name="name" value="{{vaccine.name}}">
            </div>
            <div>
                <label>Giá:</label>
                <input type="text" name="price" value='{{vaccine.price}}'>
            </div>
            <div>
                <label>Tổng số mũi</label>
                <input type="text" name="total_dose" value="{{vaccine.total_dose}}">
            </div>
            <div>
                <label>Số lượng tồn kho</label>
                <input type="text" name="inventory_number" value="{{vaccine.inventory_number}}">
            </div>
            <div>
                <label>Nước:</label>
                <input type="text" name="origin" value="{{vaccine.origin}}">
            </div>
            <div>
                <label>Mô tả:</label>
                <input type="text" name="desc" value="{{vaccine.desc}}">
            </div>
            <div>
                <label>Mô tả chi tiết:</label>
                <textarea class="w-100" name="desc_detail" value="">{{vaccine.decs_detail}}</textarea>
            </div>
            <div>
                <label>Mã loại vác xin</label>
                <input type="text" name="category_id" value="{{vaccine.category_id}}">
            </div>
            <div class="m-3">
                <label class="font-weight-bold">Mũi tiêm:</label>
                {{#each vaccine.injection}}
                <div class="my-4 border border-2 border-info"
                    style="color: rgb(131 188 237); border-color:rgb(131 188 237)">
                    <div>
                        <label>Tên mũi tiêm:</label>
                        <input type="text" name="injection.name" value="{{this.name}}">
                    </div>
                    <div>
                        <label>Nhà máy sản xuất mũi tiêm</label>
                        <input type="text" name="injection.price" value='{{this.country_manufacture}}'>
                    </div>
                    <div>
                        <label>Phòng chữa bệnh</label>
                        <input type="text" name="injection.desc" value="{{this.prevention}}">
                    </div>
                    <div>
                        <label>Số mũi</label>
                        <input type="text" name="injection.inventory_number" value="{{this.dose}}">
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="d-flex justify-content-center">
                <button class="w-100 btn btn-success" type="submit" value="Modify" id="modifyPlayerButton">
                    Cập nhật
                </button>
            </div>
        </div>
    </form>
</div>

