<div class="container-fluid">
    <div class="card card0 border-0">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-4">
                <h2 class="text-center">ĐĂNG NHẬP</h2>
                {{#wrongPassword}}
                <b>The username and password do not match</b>
                {{/wrongPassword}}
                <form method="post" id="form-2" action="/auth/login">
                    <div class="row mb-2">
                        <div class="col-3 p-0">
                            <label>Email:</label>
                        </div>
                        <div class="col-9 p-0">
                            <input class="w-100 border border-info" type="text" name="email" id="email" placeholder="kp6630924@gmail.com" />
                            <span class="form-message"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 p-0">
                            <label>Password:</label>
                        </div>
                        <div class="col-9 p-0">
                            <input class="w-100 border border-info" type="password" name="password" id="password" placeholder="kp" />
                            <span class="form-message"></span>
                        </div>
                    </div>

                    <div class="row d-flex justify-content-end">
                        <input type="submit" class="btn btn-success my-3" value="Đăng Nhập" />
                    </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>